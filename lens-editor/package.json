{
  "name": "lens-editor",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:local": "cross-env VITE_LOCAL_RELAY=true vite",
    "relay:start": "bash scripts/start-local-relay.sh",
    "relay:start:r2": "RELAY_STORAGE=r2 bash scripts/start-local-relay.sh",
    "relay:setup": "node scripts/setup-local-relay.mjs",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run relay-api.integration",
    "test:integration:editor": "vitest run Editor.integration",
    "test:integration:sidebar": "vitest run Sidebar.integration",
    "test:integration:smoke": "vitest run smoke.integration",
    "dev:fixtures": "cross-env VITE_USE_FIXTURES=true vite",
    "discord:start": "cd ../discord-bridge && npm run dev",
    "discord:setup": "echo 'Set DISCORD_BOT_TOKEN env var and run npm run discord:start'",
    "generate-link": "tsx scripts/generate-share-link.ts"
  },
  "dependencies": {
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/state": "^6.5.4",
    "@codemirror/view": "^6.39.11",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@y-sweet/client": "^0.9.1",
    "@y-sweet/react": "^0.9.1",
    "codemirror": "^6.0.2",
    "discord-markdown-parser": "^1.3.1",
    "front-matter": "^4.0.2",
    "react": "^19.2.0",
    "react-arborist": "^3.4.3",
    "react-dom": "^19.2.0",
    "react-textarea-autosize": "^8.5.9",
    "y-codemirror.next": "^0.3.5",
    "yjs": "^13.6.29"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@y-sweet/sdk": "^0.9.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "happy-dom": "^20.4.0",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vitest": "^4.0.18"
  }
}
